@{
	Layout = "_Layout";
}

@model UserCreateModel

<div class="mt-4">
	<form  asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
		

		<div class="mb-3">
			<label>Adınız:</label>
			<input asp-for="@Model.Firstname" class="form-control"/>
		</div>

		<div class="mb-3">
			<label>Soyadınız:</label>
			<input asp-for="@Model.Surname" class="form-control"/>
		</div>


		<div class="mb-3">
			<label>Kullanıcı adınız:</label>
			<input asp-for="@Model.UserName" class="form-control"/>
		</div>

		<div class="mb-3">
			<label>Telefonunuz:</label>
			<input asp-for="@Model.PhoneNumber" class="form-control"/>
		</div>
		
		<div class="mb-3">
			<select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
				<option value="0">Bir Cinsiyet seçiniz</option>
			</select>
		</div>

		<div class="mb-3">
			<label>Şifre:</label>
			<input type="password" asp-for="@Model.Passwords" class="form-control"/>
		</div>

		<div class="mb-3">
			<label>Şifre Tekrar:</label>
			<input type="password" asp-for="@Model.ConfirmPasswords" class="form-control"/>
		</div>

		<div class="mb-3 text-end">
			<button class="btn btn-primary">Kayit Ol</button>
		</div>

		<div class="text-danger text-center" asp-validation-summary="All"></div>

	</form>
</div>